{
  "resources": {
    "head": [
      {"type": "style", "src": "./build/css/jquery-comments.css"},
      {"type": "style", "src": "./build/css/font-awesome.min.css"},
      {"type": "style", "src": "./build/css/app.css"},

      {"type": "script", "src": "./build/js/jquery-3.2.1.min.js"},
      {"type": "script", "src": "./build/js/jquery-comments.min.js"},
      {"type": "script", "src": "./build/js/firebase.js"},
      {"type": "script", "src": "./build/js/app.js"}
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["_default"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "location": {
        "order": 0,
        "title": "Location",
        "description": "Where should the app appear on your site?",
        "type": "object",
        "format": "element",
        "default": {
          "selector": "body",
          "method": "prepend"
        }
      },
      "filterProfanity": {
        "order": 1,
        "title": "Filter Profanity (Default)",
        "description": "Filter profanity by default?",
        "type": "boolean",
        "default": true
      },
      "filterAdHominem": {
        "order": 2,
        "title": "Filter Ad Hominem (Default)",
        "description": "Filter ad hominem by default?",
        "type": "boolean",
        "default": true
      },
      "censorBody": {
        "order": 3,
        "title": "Censor icon",
        "description": "Censor Icon for bad words",
        "type": "string",
        "default": "This comment has been censored",
        "placeholder": "Any thing will do"
      }

    }
  }
}
